<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="babdev_supplier.admin.sylius_menu_builder.supplier" class="BabDev\SupplierPlugin\Menu\SyliusMenuBuilder">
            <tag name="kernel.event_listener" event="sylius.menu.admin.main" method="configureSupplierMenu" />
        </service>

        <service id="babdev_supplier.fixture.example_factory.supplier" class="BabDev\SupplierPlugin\Fixture\Factory\SupplierExampleFactory">
            <argument type="service" id="babdev_supplier.factory.supplier" />
        </service>

        <service id="babdev_supplier.fixture.supplier" class="BabDev\SupplierPlugin\Fixture\SupplierFixture">
            <argument type="service" id="babdev_supplier.manager.supplier" />
            <argument type="service" id="babdev_supplier.fixture.example_factory.supplier" />
            <tag name="sylius_fixtures.fixture" />
        </service>

        <service id="babdev_supplier.form.type.supplier" class="BabDev\SupplierPlugin\Form\Type\SupplierType">
            <argument>%babdev_supplier.model.supplier.class%</argument>
            <argument type="collection"><argument>sylius</argument></argument>
            <tag name="form.type" />
        </service>

        <service id="babdev_supplier.form.type.supplier_choice" class="BabDev\SupplierPlugin\Form\Type\SupplierChoiceType">
            <argument type="service" id="babdev_supplier.repository.supplier" />
            <tag name="form.type" />
        </service>
    </services>
</container>
